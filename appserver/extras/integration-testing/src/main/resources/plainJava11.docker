FROM azul/zulu-openjdk:11.0.5

ENV PAYARA_DIR /opt/payara5

RUN apt-get update && apt-get install -y openssh-server
RUN mkdir /var/run/sshd


RUN useradd -m -s /bin/bash -d ${PAYARA_DIR} payara && echo payara:payara | chpasswd
RUN chown -R payara:payara /opt

RUN apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

EXPOSE 28080 28181

CMD    ["/usr/sbin/sshd", "-D"]
